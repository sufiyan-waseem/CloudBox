<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.css"
      rel="stylesheet"
    />
    <title>My Drive</title>
  </head>
  <body>
    <main class="p-4 bg-gray-100 min-h-screen">
      <h1 class="text-2xl font-bold mb-4">My Drive</h1>

      <!-- Upload Form -->
      <form
        action="/files/upload"
        method="POST"
        enctype="multipart/form-data"
        class="mb-4"
      >
        <input type="file" name="file" required class="border p-2 rounded" />
        <button
          type="submit"
          class="bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded"
        >
          Upload
        </button>
      </form>

      <!-- Files Table -->
      <table class="w-full text-left border">
        <thead>
          <tr class="bg-gray-200">
            <th class="p-2">File Name</th>
            <th class="p-2">Type</th>
            <th class="p-2">Size (KB)</th>
            <th class="p-2">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if(files.length === 0) { %>
          <tr>
            <td colspan="4" class="p-4 text-center">No files uploaded yet.</td>
          </tr>
          <% } %> <% files.forEach(file => { %>
          <tr class="border-b">
            <td class="p-2"><%= file.originalName %></td>
            <td class="p-2"><%= file.format %></td>
            <td class="p-2"><%= (file.size / 1024).toFixed(2) %></td>
            <td class="p-2 flex gap-2">
              <% if (file.format === "pdf") { %>
              <!-- PDF: View opens in new tab -->
              <a
                href="<%= file.url %>"
                target="_blank"
                class="bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded"
              >
                View
              </a>
              <!-- PDF: Download button -->
              <a
                href="<%= file.url %>"
                download
                class="bg-green-500 hover:bg-green-600 text-white px-3 py-1 rounded"
              >
                Download
              </a>
              <% } else if
              (["jpg","jpeg","png","gif","webp"].includes(file.format)) { %>
              <!-- Images: View & Download -->
              <a
                href="<%= file.url %>"
                target="_blank"
                class="bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded"
              >
                View
              </a>
              <a
                href="<%= file.url %>"
                download
                class="bg-green-500 hover:bg-green-600 text-white px-3 py-1 rounded"
              >
                Download
              </a>
              <% } else { %>
              <!-- Other files (docx, zip, txt, etc.) -->
              <a
                href="<%= file.url %>"
                download
                class="bg-green-500 hover:bg-green-600 text-white px-3 py-1 rounded"
              >
                Download
              </a>
              <% } %> <% if(file.userId.toString() === currentUser.id) { %>
              <button
                class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded delete-btn"
                data-id="<%= file._id %>"
              >
                Delete
              </button>
              <% } %>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>

      <div id="msg" class="mt-4 text-center text-lg"></div>
    </main>

    <script>
      const deleteButtons = document.querySelectorAll(".delete-btn");
      const msgDiv = document.getElementById("msg");

      deleteButtons.forEach((btn) => {
        btn.addEventListener("click", async () => {
          const fileId = btn.getAttribute("data-id");
          if (!confirm("Are you sure you want to delete this file?")) return;

          try {
            const res = await fetch(`/files/delete/${fileId}`, {
              method: "DELETE",
            });
            if (res.ok) {
              msgDiv.textContent = "File deleted ✅";
              btn.closest("tr").remove();
            } else {
              msgDiv.textContent = "Delete failed ❌";
            }
          } catch (err) {
            console.error(err);
            msgDiv.textContent = "Delete failed ❌";
          }
        });
      });
    </script>
  </body>
</html>
